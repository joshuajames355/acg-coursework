{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}